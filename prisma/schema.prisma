// Terms of Use Content Sections
model TermsOfUseContent {
  id                         String   @id @default(uuid())
  lastUpdated                DateTime @default(now()) @map("last_updated")
  
  // Introduction
  introduction               String
  
  // Section 1: Aceitação dos Termos
  acceptanceSection          String @map("acceptance_section")
  
  // Section 2: Cadastro e Conta
  accountSection             String @map("account_section")
  
  // Section 3: Conteúdo do Usuário
  userContentLicense         String @map("user_content_license")
  userContentCreativeCommons String @map("user_content_creative_commons")
  userContentCodeLicense     String @map("user_content_code_license")
  userContentResponsibility  String @map("user_content_responsibility")
  
  // Section 4: Conduta Proibida
  prohibitedConduct          String @map("prohibited_conduct")
  
  // Section 5: Moderação e Penalidades
  moderationDescription      String @map("moderation_description")
  penaltiesDescription       String @map("penalties_description")
  appealProcess              String @map("appeal_process")
  
  // Section 6: Isenção de Garantias
  disclaimerSection          String @map("disclaimer_section")
  
  // Section 7: Limitação de Responsabilidade
  liabilityLimit             String @map("liability_limit")
  
  // Section 8: Alterações e Encerramento
  changesAndTermination      String @map("changes_and_termination")
  
  // Section 9: Disposições Gerais
  governingLaw               String @map("governing_law")
  jurisdiction               String @map("jurisdiction")
  entireAgreement            String @map("entire_agreement")
  severability               String @map("severability")
  
  // Section 10: Contato
  contactEmail               String @map("contact_email")
  contactPage                String @map("contact_page")
  
  updatedBy                  String? @map("updated_by")
  updatedByUser              User?   @relation("TermsOfUseUpdates", fields: [updatedBy], references: [id], onDelete: SetNull)
  
  @@map("terms_of_use_content")
}

// Terms of Use Update History
model TermsOfUseHistory {
  id                         String   @id @default(uuid())
  contentId                  String   @map("content_id")
  
  // Changed fields snapshot
  introduction               String
  acceptanceSection          String @map("acceptance_section")
  accountSection             String @map("account_section")
  userContentLicense         String @map("user_content_license")
  userContentCreativeCommons String @map("user_content_creative_commons")
