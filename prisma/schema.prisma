  jurisdiction               String @map("jurisdiction")
  entireAgreement            String @map("entire_agreement")
  severability               String @map("severability")
  contactEmail               String @map("contact_email")
  contactPage                String @map("contact_page")
  
  updatedBy                  String   @map("updated_by")
  updatedByUser              User     @relation("TermsOfUseHistoryUpdates", fields: [updatedBy], references: [id], onDelete: Cascade)
  updatedAt                  DateTime @default(now()) @map("updated_at")
  changeDescription          String?  @map("change_description")
  
  @@map("terms_of_use_history")
  @@index([contentId])
  @@index([updatedAt])
}

// Cookie Policy Content Sections
model CookiePolicyContent {
  id                         String   @id @default(uuid())
  lastUpdated                DateTime @default(now()) @map("last_updated")
  
  // Introduction
  introduction               String
  
  // Section 1: O Que São Cookies
  whatAreCookiesDescription  String @map("what_are_cookies_description")
  similarTechnologies        String @map("similar_technologies")
  
  // Section 2: Por Que Usamos Cookies
  whyWeUseCookies            String @map("why_we_use_cookies")
  
  // Section 3: Tipos de Cookies - Essential
  essentialCookiesDescription String @map("essential_cookies_description")
  
  // Section 3: Tipos de Cookies - Functional
  functionalCookiesDescription String @map("functional_cookies_description")
  
  // Section 3: Tipos de Cookies - Analytics
  analyticsCookiesDescription String @map("analytics_cookies_description")
  
  // Section 3: Tipos de Cookies - Marketing
  marketingCookiesDescription String @map("marketing_cookies_description")
  marketingNote              String @map("marketing_note")
  
  // Section 4: Duração dos Cookies
  cookieDurationDescription  String @map("cookie_duration_description")
  
  // Section 5: Como Gerenciar Cookies
  manageCookiesAlldev        String @map("manage_cookies_alldev")
  manageCookiesBrowser       String @map("manage_cookies_browser")
  manageCookiesThirdParty    String @map("manage_cookies_third_party")
  manageCookiesWarning       String @map("manage_cookies_warning")
  
  // Section 6: Atualizações
  updatesDescription         String @map("updates_description")
  
  // Section 7: Contato
  contactEmail               String @map("contact_email")
